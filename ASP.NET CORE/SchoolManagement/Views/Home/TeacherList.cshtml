@model List<SchoolManagement.ModelView.TeacherModel>
@{
    ViewData["Title"] = "Teacher List";
}
@Html.ActionLink("Add Teacher", "TeacherForm", "Initialize", null, new { @class = "btn btn-primary" })

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<h1>Teacher List</h1>


<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => teacher.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => teacher.LastName)</td>
                <td>
                    @Html.ActionLink("Edit", "TeacherForm", "Initialize", new { id = teacher.TeacherId }) |
                    @Html.ActionLink("Details", "DetailsTeacher", "Details", new { id = teacher.TeacherId }) |
                    <form method="post" action="/Delete/DeleteTeacher" style="display: inline;">
                        <input type="hidden" name="id" value="@teacher.TeacherId" />
                        <button type="submit" class="btn btn-link" style="padding:0px;">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>